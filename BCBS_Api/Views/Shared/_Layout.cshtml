<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
          
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/kendo/2013.3.1119/kendo.web.min.js"></script>
    <link href="~/Content/kendo/2013.3.1119/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2013.3.1119/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="#"><img src="~/Content/images/logo.png" class="logo"></a>
            <div class="welcome-wrapper">
                <span>
                    @*Welcome   @CurrentUser.FirstName*@
                </span>
                <span class="popupHoverElement welcome-user">
                    <span class="welcometext"></span>
                    <span class="sub-section popupBox">                        
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken();
                            <a href="@Url.Action("LogOff", "Account")">Log Out</a>
                        }
                    </span>
                </span>
            </div>         
        </nav>  
    </header>
    <div class="container">
    @RenderBody()
        </div>  
    @RenderSection("scripts", required: false)
    <!-- FOOTER -->
    <footer class="footer">
        <div class="footer-lt">            
            <a title="Terms of Use" href="#">Terms of Use</a> |
            <a title="Privacy Notice and Cookies Policy" href="#">Privacy Notice and Cookies Policy</a>
        </div>
        <div class="footer-rt">Copyright © @DateTime.Now.Year NC. All rights reserved.</div>
    </footer>

</body>
</html>
